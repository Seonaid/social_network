extends layout

block content
    // This navigation bar will be dynamically generated depending on where we are on the site
        .heading
          .underlay
            a(href="http://127.0.0.1:3000"): h1#homepage Nerdique
            p: a(href="http://127.0.0.1:3000/login") My Account | Register
    .carousel.slide#myCarousel(data-ride="carousel")
        //<!-- Indicators
        ol.carousel-indicators
            li.active(data-target="#myCarousel", data-slide-to="0")
            li(data-target="#myCarousel", data-slide-to="1")
            li(data-target="#myCarousel", data-slide-to="2")
        .carousel-inner(role="listbox")
            .item.active
                img(src="/images/tree_attack.jpg", alt="Second slide")
                .container
                    .carousel-caption
                        h1 Use Your Powers for Awesome.
                        p Nerdique makes it easy to meet the people who share your passions.
                        p: a.btn.btn-lg.btn-primary(href="#",role="button") Learn More
            .item
                img(src="/images/event_splash.jpg", alt="First slide")
                .container
                    .carousel-caption
                        h1 Plan your Year.
                        p Deadlines for the leading conventions gathered into a single calendar
                        p: a.btn.btn-lg.btn-primary(href="#",role="button") See What's Happening
            .item
                img(src="/images/find_one_another.jpg", alt="Third slide")
                .container
                    .carousel-caption
                        h1 Make connections.
                        p Reach across the distance to find your sympatico folk
                        p: a.btn.btn-lg.btn-primary(href="http://127.0.0.1:3000/login",role="button") Sign Up
        a.left.carousel-control(href="#myCarousel", role="button", data-slide="prev")
            span.glyphicon.glyphicon-chevron-left(aria-hidden="true")
            span.sr-only Previous
        a.right.carousel-control(href="#myCarousel", role="button", data-slide="next")
            span.glyphicon.glyphicon-chevron-right(aria-hidden="true")
            span.sr-only Next
